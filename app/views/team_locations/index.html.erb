<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<p id="notice"><%= notice %></p>

<h1>Listing Team Locations</h1>

<div style='width: 100%'>
    <div id="map" style='width: 100%; height: 400px;'></div>
</div>


<table class="table table-striped responsive">
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_locations.each do |team_location| %>
      <tr>
        <td><%= team_location.address %></td>
        <td><%= team_location.latitude %></td>
        <td><%= team_location.longitude %></td>
        <td><%= team_location.team.try(:name) %></td>
        <td><%= link_to 'Show', team_location %></td>
        <td><%= link_to 'Edit', edit_team_location_path(team_location) %></td>
        <td><%= link_to 'Destroy', team_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @team_locations, renderer: BootstrapPagination::Rails %>
<br>

<%= link_to 'New Team location', new_team_location_path %>
