<%= simple_form_for(@team, html: { class: 'form-horizontal' }) do |f| %> 
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :year %>
    <%= f.input :number %>
    <%= f.input :school %>
  </div>
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
