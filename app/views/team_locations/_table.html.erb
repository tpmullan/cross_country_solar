<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan=2>Teams</th>
      </tr>
    </thead>

    <tbody>
      <% @team_locations.each do |team_location| %>
        <tr>
          <td width="15%"><%= team_location.team.try(:number) %></td>
          <td width="85%"><%= team_location.team.try(:name) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @team_locations, renderer: BootstrapPagination::Rails %>

