<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Address</th>
        <th>Map ID</th>
        <th>Team</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @team_locations.each do |team_location| %>
        <tr>
          <td><%= team_location.address %></td>
          <td><%= link_to Team.find(team_location.team_id).number, team_path(team_location.team_id) %></td>
          <td><%= team_location.team.try(:name) %></td>
          <td><%= link_to 'Show', team_location %></td>
          <td><%= link_to 'Edit', edit_team_location_path(team_location) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @team_locations, renderer: BootstrapPagination::Rails %>

