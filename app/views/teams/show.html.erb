<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Year:</strong>
  <%= @team.year %>
</p>

<p>
  <strong>Number:</strong>
  <%= @team.number %>
</p>

<p>
  <strong>School:</strong>
  <%= @team.school %>
</p>

<p>
  <strong>Locations</strong>
</p>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team.team_locations.each do |team_location| %>
      <tr>
        <td><%= team_location.address %></td>
        <td><%= team_location.latitude %></td>
        <td><%= team_location.longitude %></td>
        <td><%= team_location.team.try(:name) %></td>
        <td><%= link_to 'Show', team_location %></td>
        <td><%= link_to 'Edit', edit_team_location_path(team_location) %></td>
        <td><%= link_to 'Destroy', team_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_team_path(@team) %> |
